<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_height"
                android:background="@drawable/side_nav_bar"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:id="@+id/userCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.bfdelivery.cavaliers.ui.views.CircleImageView
            android:id="@+id/imageView"
            style="@style/NavHeadPotrait"
            android:src="@drawable/def_potriat"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_margin_large"
            android:orientation="vertical">

            <TextView
                style="@style/NavHeadTitle"
                android:layout_marginBottom="@dimen/txt_margin_mini"
                android:text="@string/tstUserName"/>

            <TextView
                android:id="@+id/textView"
                style="@style/NavHeadDetail"
                android:text="@string/tstPhone"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
