<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="@dimen/txt_margin_default"
              android:paddingTop="@dimen/txt_margin_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCommodityName"
            style="@style/DefaultText"
            android:layout_width="0px"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/txtUnitPrice"
            style="@style/DefaultText"
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="right"/>

        <TextView
            android:id="@+id/txtCommodityCount"
            style="@style/DefaultText"
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="right"/>

        <TextView
            android:id="@+id/txtCommodityPrice"
            style="@style/DefaultText"
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="right"/>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/txtSpec"
        style="@style/DefaultText"
        android:textSize="@dimen/txt_size_small"
        android:textColor="@color/colorTxtInfo"/>

    <TextView
        android:visibility="visible"
        android:id="@+id/txtRemark"
        style="@style/DefaultText"
        android:textSize="@dimen/txt_size_small"
        android:textColor="@color/colorTxtInfo"/>
</LinearLayout>
