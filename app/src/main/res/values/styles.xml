<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="OrderDetailView">
        <attr name="detail" format="string|reference"></attr>
        <attr name="tag" format="string|reference"></attr>
    </declare-styleable>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ButtonOrderItem" parent="@android:style/Widget.TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_default</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/txt_margin_middle</item>
        <item name="android:layout_marginRight">@dimen/txt_margin_middle</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="OrderDetailTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_default</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="OrderDetailDistance" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTxtWarning</item>
        <item name="android:textSize">@dimen/txt_size_small</item>
        <item name="android:background">@drawable/bkg_orderdetail_distance</item>
    </style>

    <style name="OrderIndex" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTxtDefault</item>
        <item name="android:textSize">@dimen/txt_size_big</item>
    </style>

    <style name="OrderDetailStatus" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTxtPrimary</item>
        <item name="android:textSize">@dimen/txt_size_mini</item>
        <item name="android:background">@drawable/bkg_order_status</item>
        <item name="android:padding">@dimen/radius_default</item>
    </style>

    <style name="ButtonUserCenterControl" parent="@android:style/Widget.TextView">
        <item name="android:layout_margin">@dimen/txt_margin_small</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/slct_btn_default_bkg</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/txt_margin_middle</item>
        <item name="android:paddingTop">@dimen/txt_margin_middle</item>
        <item name="android:textColor">@drawable/slct_default_txt_clr</item>
    </style>

    <style name="NaviMenuItem" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_default</item>
        <item name="android:padding">@dimen/txt_margin_middle</item>
        <item name="android:background">@drawable/slct_bkg_menuitem</item>
        <item name="android:drawablePadding">@dimen/txt_margin_middle</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">@color/colorTip</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/colorTxtPrimary</item>
    </style>
</resources>
